{
    "name": "macavity/php-vue-to-twig",
    "description": "",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexander Pape",
            "email": "a.pape@paneon.de"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-dom": "*",
        "ext-libxml": "*",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "Macavity\\VueToTwig\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Macavity\\VueToTwig\\": "src",
            "Macavity\\VueToTwig\\Tests\\": "tests"
        },
        "files": [
            "vendor/autoload.php"
        ]

    },
    "require-dev": {
        "ext-simplexml": "*",
        "phpunit/phpunit": "^7"
    },
    "scripts": {
        "cs:fix": "phpcbf --standard=phpcs.xml",
        "cs:check": "phpcs --standard=phpcs.xml --colors -ps"
    }
}
